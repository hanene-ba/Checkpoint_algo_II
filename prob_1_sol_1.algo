FUNCTION test_size() : INTEGER
VAR
    N : INTEGER; 
BEGIN
    REPEAT
        Write("saisir la taille du tab" )
    UNTIL (N <= 0 OR n > 40)
    RETURN N ;
END

PROCEDURE remplir_tab(VAR N : INTEGER, VAR Tab : ARRAY_OF INTEGER )
VAR
    i : INTEGER; 
BEGIN
    FOR i FROM 0 TO N - 1  DO
        Read (T[i]);
    END_FOR
END
 // fin saisie 2 array 

ALGORITHM Calcul_distints
VAR
    sum  : INTEGER := 0 ; 
    i , N , M, j : INTEGER; 
    arr1 , ar2 : ARRAY_OF INTEGER [40];
    existe : BOOLEAN; 

//insertion des 2 tableau 

BEGIN
 N :=  test_size() ;
 M := test_size() ;
 remplir_tab(N,arr1);
 remplir_tab(M,arr2);

// teste des tab vide + recherche distincts 

IF (N=0) and (M <> 0) THEN
    FOR j FROM 0 TO M -1 STEP 1  DO
        sum := sum + arr2 [j] 
    END_FOR

ELSE_IF (M=0) and (N<>0) THEN
    FOR i FROM 0 TO N -1 STEP 1  DO
        sum := sum + arr1 [i] 
    END_FOR
ELSE
    existe := FALSE;
    FOR i FROM 0 TO N -1 STEP 1  DO
        FOR j FROM 0 TO M -1 STEP 1  DO
        IF (arr1 [i] = arr2[j])  THEN
            existe := TRUE ;
            BREAK; 
        END_IF
        END_FOR
         IF ((esixte = FALSE) and (j = M -1))  THEN
             sum := sum + arr1[i] ; 
        END_IF 
    END_FOR      
END_IF 
IF (N=0)and(M=0) THEN
    sum := 0; 
    Write("les 2 tableaux sont vides ! La  somme des entiers distincts est Ã©gale :",sum) ; 
ELSE
    Write("la somme des entiers  distinct est",sum) ; 
END_IF   
END  
